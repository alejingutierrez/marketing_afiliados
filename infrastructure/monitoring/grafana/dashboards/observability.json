{
  "id": null,
  "uid": "marketing-observability",
  "title": "Marketing Observability",
  "tags": [
    "marketing",
    "operations"
  ],
  "timezone": "",
  "schemaVersion": 37,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": [
      "10s",
      "30s",
      "1m",
      "5m"
    ],
    "time_options": [
      "1h",
      "6h",
      "12h",
      "24h",
      "7d"
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "API Latency (p95)",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "min": 0
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(marketing_afiliados_api_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "API Webhook Throughput",
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "fieldConfig": {
        "defaults": {
          "unit": "ops"
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "sum(rate(marketing_afiliados_webhook_events_total[5m]))",
          "legendFormat": "total",
          "refId": "A"
        },
        {
          "expr": "sum(rate(marketing_afiliados_webhook_events_total{success='false'}[5m]))",
          "legendFormat": "errores",
          "refId": "B"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Alertas emitidas",
      "gridPos": {
        "x": 0,
        "y": 8,
        "w": 6,
        "h": 6
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "sum(marketing_afiliados_alerts_total)",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Colas pendientes",
      "gridPos": {
        "x": 6,
        "y": 8,
        "w": 6,
        "h": 6
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "marketing_afiliados_queue_pending_jobs",
          "legendFormat": "{{queue}}",
          "refId": "A"
        },
        {
          "expr": "marketing_afiliados_worker_backup_runs_total",
          "legendFormat": "backups",
          "refId": "B"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Discrepancias de conciliaci\u00f3n",
      "gridPos": {
        "x": 12,
        "y": 8,
        "w": 12,
        "h": 6
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "marketing_afiliados_reconciliation_discrepancies_total",
          "legendFormat": "{{type}}",
          "refId": "A"
        }
      ]
    }
  ],
  "templating": {
    "list": []
  }
}
